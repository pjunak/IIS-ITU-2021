{block title}
{if $user->isInRole('disponent')}
    Vaše firmy
{else}
    Přehled firem
{/if}
{/block}
{block content}
    <div class="lista-nad-menu">
        {if !$user->isInRole('disponent')}
            <a class="btn-action" n:href="editor"><i class="fas fa-building"></i> Vložit firmu</a>
        {else}
            <label></label>
        {/if}
        <input class="form-control filter-input" id="myInput" type="text" placeholder="Filtrovat řádky tabulky...">
    </div>
    
    <table class="list-entities table table-striped table-hover">
        <thead>
            <tr>
                <th>Název</th>
                <th>RÚT ID</th>
                <th>IČO</th>
                <th>Adresa</th>
            </tr>
        </thead>
        <tbody id="data">
            <tr n:foreach="$companies as $company">
                <td><span class="company-name-link"><a n:href="Company: $company->rut_id">{$company->nazev}</a></span></td>
                <td>{$company->rut_id}</td>
                <td>{$company->ic}</td>
                <td>{$company->ulice} {if $company->cislo_o != NULL}{$company->cislo_o}/{/if}{$company->cislo_p}, {$company->psc} {$company->obec}</td>
            </tr>
        </tbody>
    </table>
{/block}
